@model SiteSerials.Domain.Entities.Serial

@{
    ViewBag.Title = "Редактирование сезонов: ";

}

<div class="panel panel-default">
    <div class="panel-heading">
        <h3>Список сезонов:</h3>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-condensed table-bordered">
            <tr>
                <th class="text-right">ID</th>
                <th>Название</th>
                <th></th>
                <th class="text-center"></th>
            </tr>
            @foreach (var item in Model.Seasons)
            {
                using (Html.BeginForm("DeleteSeason", "Admin"))
                {
                    <tr>
                        <td class="text-right">@item.Id</td>
                        <td>@Html.ActionLink(item.Season_title, "EditSerie", new { item.Id })</td>
                        <td>@Html.ActionLink("Редактировать", "EditSeason", new { item.Id })</td>
                        <td class="text-center">
                            <a class="btn btn-default" href="/Admin/DeleteSeason/@item.Id">удалить сезон</a>
                        </td>                       
                    </tr>
                }
            }

        </table>
    </div>
    <div class="panel-footer">
        <a class = "btn btn-default" href="/Admin/CreateSeason/@ViewData["ID"]">Добавить сезон</a>
    </div>
</div>



